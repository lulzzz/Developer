@model Aiursoft.Developer.Models.FilesViewModels.ViewFilesViewModel
@{
    ViewData["Title"] = "All files";
    Layout = "_AppLayout";
}

<div class="container-fluid">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a asp-controller="Apps" asp-action="Index">Dashboard</a>
        </li>
        <li class="breadcrumb-item">
            <a asp-controller="Files" asp-action="Index">Files</a>
        </li>
        <li class="breadcrumb-item active">@ViewData["Title"]</li>
    </ol>
    <div class="card mb-3">
        <div class="card-header">
            <i class="fa fa-database ico"></i>
            Object Storage Settings
        </div>
        <div class="card-body">
            <div class="col-xs-12">
                <h5>Files of this bucket：(Top 200)</h5>
                <table class="table table-striped datatable">
                    <thead>
                        <tr>
                            <th>File ID</th>
                            <th>File Name</th>
                            <th>File Size(Kb)</th>
                            <th class="d-none d-sm-block">Download Times</th>
                            <th class="d-none d-md-block">Deadline</th>
                            <th class="d-none d-xs-block">Download</th>
                            <th class="d-none d-sm-block">Generate Link</th>
                            <th>Delete</th>
                            <th>Rename</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var file in Model.AllFiles)
                        {
                            <tr>
                                <td>@file.FileKey</td>
                                <td>@file.RealFileName</td>
                                <td>@string.Format("{0:N}", Math.Round(d: (decimal)file.JFileSize / 1024, decimals: 2))</td>
                                <td class="d-none d-sm-block">@file.DownloadTimes</td>
                                <td class="d-none d-md-block">@((file.UploadTime + new TimeSpan(file.AliveDays, 0, 0, 0)).ToShortDateString())</td>
                                @if (Model.OpenToRead)
                                {
                                    <td class="d-none d-xs-block" style="min-width:225px;">
                                        <div class="btn-group">
                                            <a class="btn btn-warning waves-effect waves-light" href="@file.GetInternetPath?sd=true" target="_blank">Download</a>
                                            <a class="btn btn-info waves-effect waves-light" href="@file.GetInternetPath" target="_blank">Open</a>
                                            <a class="btn btn-success waves-effect waves-light" href="#" data-toggle="tooltip" data-trigger="click" title="copied!" data-clipboard-text="@file.GetInternetPath">Copy link</a>
                                        </div>
                                    </td>
                                }
                                <td class="d-none d-sm-block">
                                    <div class="btn-group">
                                        <a class="btn btn-warning waves-effect waves-light" asp-controller="Files" asp-action="GenerateLink" asp-route-id="@file.FileKey">Generate Link</a>
                                    </div>
                                </td>
                                <td><a class="btn btn-danger waves-effect waves-light" asp-controller="Files" asp-action="DeleteFile" asp-route-id="@file.FileKey">Delete</a></td>
                                <td><a class="btn btn-warning  waves-light" href="#">Rename</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
                <div class="col-md-12 margin-top-30">
                    <a asp-controller="Files" asp-action="UploadFile" asp-route-id="@Model.BucketId" class="btn btn-success">Upload new file</a>
                    <a asp-controller="Apps" asp-action="ViewApp" asp-route-id="@Model.AppId" class="btn btn-info">Back to App</a>
                </div>

            </div>
        </div>
    </div>
</div>
@section js{
    <script src="@Values.CdnServerAddress/node_modules/clipboard/dist/clipboard.min.js"></script>
    <script>
        new Clipboard('.btn');
        $(document).ready(function () {
            $('[data-toggle="tooltip"]').tooltip();
        });
    </script>
}

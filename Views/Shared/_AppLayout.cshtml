@model Aiursoft.Developer.Models.AppsViewModels.AppLayoutModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@Localizer[ViewData["Title"].ToString()] - @Localizer["Developer Center"]</title>

    <environment names="Development">
        <link href="@Values.CdnServerAddress/node_modules/bootstrap/dist/css/bootstrap.css" rel="stylesheet">
        <link href="@Values.CdnServerAddress/node_modules/font-awesome/css/font-awesome.css" rel="stylesheet">
        <link href="@Values.CdnServerAddress/node_modules/dropify/dist/css/dropify.css" rel="stylesheet" />
        <link href="@Values.CdnServerAddress/node_modules/datatables/media/css/jquery.dataTables.css" rel="stylesheet" />
        <link href="@Values.CdnServerAddress/node_modules/startbootstrap-sb-admin/css/sb-admin.css" rel="stylesheet">
        <link href="@Values.CdnServerAddress/css/dashboard.css" rel="stylesheet">
    </environment>
    <environment exclude="Development">
        <link href="@Values.CdnServerAddress/dist/dashboard.min.css" rel="stylesheet" asp-append-version="true">
    </environment>
    @RenderSection("css", required: false)
</head>
<body class="fixed-nav sticky-footer bg-dark" id="page-top">
    <!-- Navigation-->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top" id="mainNav">
        <a class="navbar-brand" asp-controller="Home" asp-action="Index">Developer Center</a>
        <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarResponsive">
            <ul class="navbar-nav navbar-sidenav" id="exampleAccordion">
                <li class="nav-item @(Model.ActivePanel == 0 ? "active":string.Empty)" data-toggle="tooltip" data-placement="right" title="Dashboard">
                    <a class="nav-link" asp-controller="Apps" asp-action="Index">
                        <i class="fa fa-fw fa-dashboard"></i>
                        <span class="nav-link-text">Dashboard</span>
                    </a>
                </li>
                <li class="nav-item @(Model.ActivePanel == 1 ? "active":string.Empty)" data-toggle="tooltip" data-placement="right" title="All Apps">
                    <a class="nav-link" asp-controller="Apps" asp-action="AllApps">
                        <i class="fa fa-fw fa-server"></i>
                        <span class="nav-link-text">
                            All Apps
                            <span class="badge badge-info">@Model.AppCount</span>
                        </span>
                    </a>
                </li>
                <li class="nav-item @(Model.ActivePanel == 2 ? " active":string.Empty)" data-toggle="tooltip" data-placement="right" title="Buckets">
                    <a class="nav-link" asp-controller="Bucket" asp-action="Index">
                        <i class="fa fa-fw fa-inbox"></i>
                        <span class="nav-link-text">Buckets</span>
                    </a>
                </li>
                <li class="nav-item @(Model.ActivePanel == 3 ? "active":string.Empty)" data-toggle="tooltip" data-placement="right" title="Buckets">
                    <a class="nav-link" asp-controller="Bucket" asp-action="Index">
                        <i class="fa fa-fw fa-random"></i>
                        <span class="nav-link-text">Message Queue</span>
                    </a>
                </li>
            </ul>
            <ul class="navbar-nav sidenav-toggler">
                <li class="nav-item">
                    <a class="nav-link text-center" id="sidenavToggler">
                        <i class="fa fa-fw fa-angle-left"></i>
                    </a>
                </li>
            </ul>
            <ul class="navbar-nav ml-auto">
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle mr-lg-2" id="messagesDropdown" href="#" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <i class="fa fa-fw fa-envelope"></i>
                        <span class="d-lg-none">
                            Messages
                            <span class="badge badge-pill badge-primary">12 New</span>
                        </span>
                        <span class="indicator text-primary d-none d-lg-block">
                            <i class="fa fa-fw fa-circle"></i>
                        </span>
                    </a>
                    <div class="dropdown-menu" aria-labelledby="messagesDropdown">
                        <h6 class="dropdown-header">New Messages:</h6>
                        <div class="dropdown-divider"></div>
                        @for (int i = 0; i < 7; i++)
                        {
                            <a class="dropdown-item" href="#">
                                <strong>David Miller</strong>
                                <span class="small float-right text-muted">11:21 AM</span>
                                <div class="dropdown-message small">Hey there! This new version of SB Admin is pretty awesome! These messages clip off when they reach the end of the box so they don't overflow over to the sides!</div>
                            </a>
                            <div class="dropdown-divider"></div>
                        }
                        <a class="dropdown-item small" href="#">View all messages</a>
                    </div>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle mr-lg-2" id="alertsDropdown" href="#" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <i class="fa fa-fw fa-bell"></i>
                        <span class="d-lg-none">
                            Alerts
                            <span class="badge badge-pill badge-warning">6 New</span>
                        </span>
                        <span class="indicator text-warning d-none d-lg-block">
                            <i class="fa fa-fw fa-circle"></i>
                        </span>
                    </a>
                    <div class="dropdown-menu" aria-labelledby="alertsDropdown">
                        <h6 class="dropdown-header">New Alerts:</h6>
                        <div class="dropdown-divider"></div>
                        @for (int i = 0; i < 7; i++)
                        {
                            <a class="dropdown-item" href="#">
                                <span class="text-success">
                                    <strong>
                                        <i class="fa fa-long-arrow-up fa-fw"></i>Status Update
                                    </strong>
                                </span>
                                <span class="small float-right text-muted">11:21 AM</span>
                                <div class="dropdown-message small">This is an automated server response message. All systems are online.</div>
                            </a>
                            <div class="dropdown-divider"></div>
                        }
                        <a class="dropdown-item small" href="#">View all alerts</a>
                    </div>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="@Values.WikiServerAddress" id="dropdown02" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <img class="rounded" src="@((await UserManager.FindByNameAsync(User.Identity.Name)).HeadImgUrl)?w=200&h=200" style="width:20px;height:20px;" />
                    </a>
                    <div class="dropdown-menu" aria-labelledby="dropdown02">
                        <a class="dropdown-item" href="@Values.AccountServerAddress">Profile</a>
                        <a class="dropdown-item" href="javascript:$('#logoutForm').submit()">Sign out</a>
                    </div>
                </li>
                <li class="nav-item">
                    <form class="form-inline my-2 my-lg-0 mr-lg-2">
                        <div class="input-group">
                            <input class="form-control" type="text" placeholder="Search for...">
                            <span class="input-group-btn">
                                <button class="btn btn-primary" type="button">
                                    <i class="fa fa-search"></i>
                                </button>
                            </span>
                        </div>
                    </form>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-toggle="modal" data-target="#exampleModal">
                        <i class="fa fa-fw fa-sign-out"></i>Logout
                    </a>
                </li>
            </ul>
        </div>
    </nav>
    <div class="content-wrapper">
        @RenderBody()
        <footer class="sticky-footer">
            <div class="container">
                <small>
                    <a href="@(new AiurUrl(Values.ApiServerAddress, "Api", "SetLang", new
                        {
                            Host = $"{Context.Request.Scheme}://{Context.Request.Host}",
                            Path = Context.Request.Path
                        }))">Language(语言)</a>
                </small> |
                <small>Copyright © @Values.ProjectName @DateTime.Now.Year</small>
            </div>
        </footer>

        <a class="scroll-to-top rounded" href="#page-top">
            <i class="fa fa-angle-up"></i>
        </a>
        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Ready to Leave?</h5>
                        <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">×</span>
                        </button>
                    </div>
                    <div class="modal-body">Select "Logout" below if you are ready to end your current session.</div>
                    <div class="modal-footer">
                        <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                        <a class="btn btn-primary" href="javascript:$('#logoutForm').submit()">Logout</a>
                    </div>
                    <form class="hidden" asp-controller="Home" asp-action="LogOff" method="post" id="logoutForm"></form>
                </div>
            </div>
        </div>

        <environment names="Development">
            <script src="@Values.CdnServerAddress/node_modules/jquery/dist/jquery.js"></script>
            <script src="@Values.CdnServerAddress/node_modules/popper.js/dist/umd/popper.min.js"></script>
            <script src="@Values.CdnServerAddress/node_modules/bootstrap/dist/js/bootstrap.js"></script>
            <script src="@Values.CdnServerAddress/node_modules/jquery.easing/jquery.easing.min.js"></script>
            <script src="@Values.CdnServerAddress/node_modules/dropify/dist/js/dropify.js"></script>
            <script src="@Values.CdnServerAddress/node_modules/datatables/media/js/jquery.dataTables.js"></script>
            <script src="@Values.CdnServerAddress/node_modules/startbootstrap-sb-admin/js/sb-admin.js"></script>
            <script src="@Values.CdnServerAddress/node_modules/jquery-validation/dist/jquery.validate.js"></script>
            <script src="@Values.CdnServerAddress/node_modules/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
            <script src="@Values.CdnServerAddress/js/dashboard.js"></script>
        </environment>
        <environment exclude="Development">
            <script src="@Values.CdnServerAddress/dist/dashboard.min.js" asp-append-version="true"></script>
        </environment>
        @RenderSection("js", required: false)
    </div>
</body>
</html>